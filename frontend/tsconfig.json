{
  "compilerOptions": {
    "jsx": "preserve", // <- ESSENCIAL para JSX funcionar
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": ".", // para suportar importações com "@/"
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ], // <- Certifique-se que isso existe
  "exclude": [
    "node_modules"
  ]
}
